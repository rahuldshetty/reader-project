{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "reader-project",
  "version": "0.1.1",
  "identifier": "com.reader-project.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "reader-project",
        "width": 1024,
        "height": 768,
        "maximized": true,
        "resizable": true,
        "decorations": false,
        "label": "main",
        "visible": false
      },
      {
        "label": "splashscreen",
        "url": "/splashscreen",
        "width": 1024,
        "height": 768,
        "maximized": true,
        "resizable": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "externalBin": ["binaries/app"],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:reader.db"]
    }
  }
}
